/* pages/jian/jian.wxss */
#jian{
  width: 100%;
  height: 100%;
  background: #eee;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: auto;
}
#img{
  width: 100%;
  height: 400rpx;
  /* background: #fff; */
}
#img image{
  width: 100%;
  height: 100%;
}
#experience{
  width: 90%;
  /* height: 600rpx; */
  background: #fff;
  position: relative;
  top: -60rpx;
  border: 1rpx solid rgb(240, 235, 235);
  box-sizing: border-box;
  box-shadow: 1rpx 1rpx 5rpx 5rpx rgb(199, 211, 233);
  display: flex;
  flex-direction: column;
  /* align-items: center; */
}
.title{
  margin-left: 20rpx;
  margin-top: 20rpx;
  font-size: 40rpx;
}
.title2{
  margin-top: 0;
}
.work{
  width: 90%;
  /* background: lightblue; */
  margin: 0 auto;
  margin-bottom: 30rpx;
  /* margin-top: 10rpx; */
}
.li{
  height: 100rpx;
  border-left: 2rpx solid rgb(189, 184, 184);
  border-bottom: 2rpx solid #f2f2f2;
  margin-top: 20rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.date{
  margin-left: -26rpx;
  display: flex;
  align-items: center;
  color:rgb(189, 184, 184);
}
.border{
  width:20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #1296db;
  margin-right: 10rpx;
}
.company{
  margin: 6rpx 0;
}
